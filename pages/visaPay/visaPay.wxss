.body {
  background-color: #f1f5f8;
}

/*头部配置  */

.header {
  width: 100%;
  height: 88rpx;
  position: absolute;
  z-index: 1;
}

.header .search {
  font-size: 22rpx;
  width: 400rpx;
  height: 48rpx;
  text-align: center;
  margin-top: 20rpx;
  margin-left: 150rpx;
  border-radius: 25rpx;
  background: rgba(255, 255, 255, 0.3);
  display: inline-block;
}

.input-placeholder {
  color: #666;
}

.header .search-img {
  width: 44rpx;
  height: 44rpx;
  margin-left: 15rpx;
  border-bottom: 3rpx solid rgba(255, 255, 255, 0);
}

/* 套餐  */

.package {
  font-size: 26rpx;
  background-color: #fff;
  margin-top: 16rpx;
}

.package-title {
  line-height: 64rpx;
  padding-left: 24rpx;
}

.content {
  color: #333;
}

.item {
  line-height: 88rpx;
  border-top: 1rpx solid #f1f5f8;
  padding-left: 24rpx;
  padding-right: 24rpx;
  display: flex;
  justify-content: space-between;
}

.down-img {
  width: 50rpx;
  height: 50rpx;
  margin-top: 19rpx;
}

.active-img {
  transform: rotate(180deg);
}

.text {
  font-size: 24rpx;
  color: #707070;
  line-height: 40rpx;
  background-color: #f7f9fa;
  padding: 24rpx;
}

.text-title {
  color: #333;
}

/* 选择人数  */

.number {
  background-color: #fff;
  padding-left: 24rpx;
  padding-right: 24rpx;
  margin-top: 16rpx;
}

.num-title {
  font-size: 26rpx;
  line-height: 90rpx;
}

.num-content {
  font-size: 24rpx;
  line-height: 44rpx;
  padding-bottom: 44rpx;
  display: flex;
  justify-content: space-between;
}

.content-right {
  text-align: center;
  flex: 1;
}

.content-left {
  text-align: center;
  flex: 1;
}

.right-img {
  width: 45rpx;
  height: 45rpx;
}

.right-center {
  line-height: 40rpx;
  border: 1rpx solid #ccc;
  border-radius: 6rpx;
  padding: 0 20rpx;
  margin: 0 42rpx;
  vertical-align: top;
  text-align: center;
  display: inline-block;
}

/* 签证详情  */

.details {
  margin-top: 16rpx;
  background-color: #fff;
}

.details-title {
  font-size: 26rpx;
  line-height: 90rpx;
  padding-left: 24rpx;
}

.details-content {
  font-size: 24rpx;
  color: #666;
  line-height: 72rpx;
}

.details-content view {
  padding-left: 24rpx;
  border-top: 1rpx solid #f1f5f8;
}
.details-content .item-scope{
  height: 320rpx;
  overflow: aotu;
}
.scope-child {
  line-height: 36rpx;
  text-indent: 2em;
  margin-top: -40rpx;
  padding-left: 66rpx;
  padding-right: 66rpx;
  display: inline-block;
} 

/* footer-box  */
.footer-box{
  position: relative;
}