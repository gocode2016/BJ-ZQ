.body {
  font-family: '苹方' SC 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  background-color: #f1f5f8;
}

/* 顶部搜索栏  */
.header {
  width: 100%;
  height: 88rpx;
  position: absolute;
  z-index: 1;
  background-color: #eee;
  display: flex;
  align-items: center;
}
.header .input-box{
  font-size: 22rpx;
  text-align: center;
  margin-left: 150rpx;
}
.header .search-input {
  width: 400rpx;
  height: 48rpx;
  border-radius: 25rpx;
  background: rgba(255, 255, 255, 0.3);
}

.input-placeholder {
  color: #666;
}
.header .img-box{
  height: 44rpx;
  margin-left: 15rpx;  
}
.header .search-img {
  width: 44rpx;
  height: 44rpx;
}

