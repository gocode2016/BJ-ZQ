.body {
  font-size: 26rpx;
  background-color: #f1f5f8;
}

/* 日历面板  */

.calendar {
  background-color: #fff;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.calendar-panel {
  line-height: 72rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.prevImg, .nextImg {
  width: 40rpx;
  height: 40rpx;
}

.prevImg {
  transform: rotate(180deg);
}

.calendar-panel image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
}

.time {
}

.calendar-header {
  font-size: 28rpx;
  line-height: 72rpx;
  border-top: 2rpx solid #eee;
  border-bottom: 2rpx solid #eee;
  display: flex;
  justify-content: space-between;
}

.calendar-header view {
  width: 75rpx;
  text-align: center;
}

.calendar-body {
  width: 100%;
  margin-top: 16rpx;
  padding-bottom: 16rpx;
}

.calender-body-date-week {
  display: flex;
  justify-content: space-between;
}

.date {
  width: 100rpx;
  height: 80rpx;
  text-align: center;
  position: relative;
  line-height:56rpx;
  border-radius:10rpx;
  padding-bottom: 5rpx;
}

.date-money {
  width: 100%;
  font-size: 20rpx;
  color: #38b2c0;
  text-align: center;
  padding-top: 35rpx;
  position: absolute;
  top: 0;
  left: 0;
} 

.stage {
  width: 100%;
  height: 100%;
  font-size: 20rpx;
  color: #38b2c0;
  box-sizing: border-box;
  padding-top: 50%;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
}

.test {
  
}

/* 其他月份 样式  */

.other-month {
  color: #ccc;
  z-index: 1;
}

/* active Day  */

.avtive-date {
  color: #fff;
  background-color:#66ccdd;
}
.active-money{
  color: #fff;
}


/* 出团时间 */
.start{
  padding-left: 24rpx;
  margin-top: 16rpx;
  background-color: #fff;
}
.start-time{
  font-size: 26rpx;
  line-height: 72rpx;
}


/* number 人数 */

.number {
  line-height: 72rpx;
  background-color: #fff;
  margin-top: 16rpx;
}
.adult{
  border-bottom: 1rpx solid #eee;
  padding-left: 24rpx;
  padding-right: 24rpx;
  display: flex;
  align-items: center;
}

.number-text{
  width: 100rpx;
}
.number-price{
  width: 200rpx;
  margin-left: 100rpx;
  margin-right: 100rpx;
}
.number-ctor{
  height: 50rpx;
  border: 1px solid #f1f5f8;
  display: flex;
  align-items: center;
}

.subtract, .num, .add{

}
.subtract{
  box-sizing: border-box;
  padding-bottom: 6rpx;
}
.num{
  width: 80rpx;
  line-height: 50rpx;
  border-left: 1px solid #f1f5f8;
  border-right: 1px solid #f1f5f8;
  text-align: center;
}
.add{
  box-sizing: border-box;
  padding-bottom: 6rpx;
}

.subtract image, .add image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

/* 表单 */
/* 其他需求  */
.form{
  margin-top: 16rpx;
  margin-bottom: 2rpx;
}
.other {
  background-color: #fff;
  border-bottom: 1rpx solid #fff;
}

.other-text {
  font-size: 26rpx;
  line-height: 64rpx;
  padding-left: 24rpx;
  border-bottom: 1rpx solid #f1f5f8;
}

.text-box {
  width: 95%;
  margin: 16rpx auto 30rpx;
  border: 1rpx solid #ccc;
  border-radius: 10px;
  overflow: hidden;
}

.textarea {
  font-size: 24rpx;
  line-height: 48rpx;
  width: 95%;
  height: 200rpx;
  margin: 24rpx auto;
}

.placeholder {
  color: #999;
}

/* 联系人信息  */

.contact {
  background-color: #fff;
  border-bottom: 1rpx solid #fff;
  margin-bottom: 18rpx;
  padding-bottom: 100rpx;
}

.contact-text {
  font-size: 26rpx;
  line-height: 64rpx;
  padding-left: 24rpx;
  border-bottom: 1rpx solid #f1f5f8;
}

.contact-box {
  line-height: 96rpx;
  font-size: 24rpx;
}

.contact-box .left {
  width: 116rpx;
  text-align: center;
  padding-left: 24rpx;
  display: inline-block;
}

.contact-box input {
  width: 420rpx;
  padding-left: 24rpx;
  border: 1rpx solid #cccccc;
  border-radius: 6rpx;
  vertical-align: middle;
  display: inline-block;
}
.contact-box .will {
  padding-left: 26rpx;
  color: red;
}

/* footer submit  */
 .footer{
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 2rpx solid #f1f5f8;
  padding-left: 24rpx;
  padding-right: 24rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
}
.submit{
  width: 100%; 
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  background-color: #db2424;
  margin-top: 10rpx; 
  margin-bottom: 10rpx;
  z-index: 200;
}

.hidden{
  font-size: 22rpx;
  color: red;
  line-height: 32rpx;
  text-align: center;
} 
