.info-state{
  font-size: 26rpx;
  line-height: 88rpx;
  background-color: #fff;
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.order-num{
  padding-left: 24rpx;
}
.order-state{
  padding-right: 24rpx;
}
.order-state-1{
  color: #e24949;
}
.order-state-2{
 color: #0c95a5;
}
.order-state-3{
  color: #999999;
}

.footer-box{
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  border-top: 2rpx solid #f1f5f8;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.order-footer{
  font-size: 26rpx;
  line-height: 52rpx;
  border: 2rpx solid #000;
  border-radius: 6rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
}
.order-footer-state1{
  color: #e24949;
   border: 2rpx solid #e24949; 
}
.order-footer-state2{
  color: #333;
   border: 2rpx solid #333; 
}
.part{
  width: 2rpx;
  height: 56rpx;
  background-color: #f1f5f8;
}
