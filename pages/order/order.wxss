.body{
   background-color: #f1f5f8; 
}

/* 用户信息 */
.user-info{
  font-size: 0;
  text-align: center;
  background-color: #fff;
  padding-top: 20rpx;
}
.user-avatar{
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
}
.avatar-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;   
  vertical-align: sup;
}
.user-name{
  font-size: 32rpx;
  line-height: 72rpx;
}

/* 订单列表    */
/* .order-info{
