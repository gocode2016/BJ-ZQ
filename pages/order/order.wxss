.body{
   background-color: #f1f5f8; 
}

.header{
  width: 100%;
  position: fixed;
  z-index: 1;
}
/* 顶部 订单  */
.order{
  font-size: 26rpx;
  line-height: 80rpx;
  border-top: 2rpx solid #f1f5f8;
  border-bottom: 1rpx solid #f1f5f8;
  background-color: #fff;  
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.travel , .visa{
  width: 280rpx;
  text-align: center;
  border-bottom: 1rpx solid #fff;
}
.separated{
  width: 2rpx;
  height: 44rpx;
  background-color: #f1f5f8;
}
.active-order{
  color: #0c95a5; 
  border-bottom: 1rpx solid #0c95a5;
}

/* 顶部  状态  */
.state{
  font-size: 24rpx;
  line-height: 72rpx;
  text-align: center;
  margin-bottom: 16rpx;
  border-bottom: 1rpx solid #f1f5f8;
  background-color: #fff;    
  display: flex;
  justify-content: space-around;
}
.state>view{
   flex: 1; 
}
.active-state{
  color: #0c95a5;
}

/* 订单列表    */
.info{
  padding-top: 173rpx;
}
.info-box{
  font-size: 26rpx;
  line-height: 88rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.order-num{
  padding-left: 24rpx;
}
.order-state{
  padding-right: 24rpx;
}
.order-state-1{
  color: #e24949;
}
.order-state-2{
 color: #0c95a5;
}
.order-state-3{
  color: #999999;
}

.footer-box{
  width: 100%;
  height: 88rpx;
  margin-top: 20rpx;
  border-top: 1rpx solid #f1f5f8;
  position: relative;
}
.order-footer{
  font-size: 26rpx;
  line-height: 54rpx;
  border: 1rpx solid #000;
  border-radius: 6rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  position: absolute;
  top: 16rpx;
  right: 24rpx;
}
.order-footer-state1{
  color: #e24949;
  border: 1rpx solid #e24949;
}
.order-footer-state2{
  color: #333;
  border: 1rpx solid #333;
}
