<!--index.wxml-->
<view class="body">
  <!--头部搜索框 \ 点击按钮  -->
  <view class="header">
    <input class="search" placeholder="请输入关键字"> </input>
    <image class="search-img" src='../../images/tx.png' mode="aspectFill"></image>
  </view>
  <!-- 轮播图 -->
  <swiper class="swiper" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" current="{{current}}">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="400" height="150" />
      </swiper-item>
    </block>
  </swiper>
  <!-- 中间的小分类 -->
  <view class="type">
    <block wx:for="{{tourism_type}}">
      <view class='type-item'>
        <view class='type-item-box'>
          <image class="type-img" src="{{item}}" mode="aspectFill"></image>
        </view>
        <view class="introduction"> {{index}} </view>
      </view>
    </block>
  </view>
  <!-- 签证服务 -->
  <view class="visa">
    <view class="separated"></view>

    <view class="visa-header">
      <view class="visa-header-text">签证服务</view>
      <view class="visa-header-box">
        <text class="visa-header-box-more">更多</text>
        <image class="visa-header-box-img"> &gt </image>
      </view>
    </view>

    <view class="visa-content">
      <block wx:for="{{ service }}">
        <view class="content-item">
          <view class="item-header">
            <image class="content-img" src="{{item.img}}" mode="aspectFill"></image>
          </view>
          <view class="item-body">
            <text class="money">{{ "￥" + item.money}}</text>
            <text class="transport">{{item.transport}}</text>
          </view>
          <view class="item-footer">
            <text class="text">{{item.text}}</text>
            <text class="promotion">{{item.promotion}}</text>
          </view>
        </view>
      </block>
    </view>
  </view>

  <!--还喜欢  -->
  <view class="like">
    <view class="like-header">- 你还可能喜欢 -</view>

    <view class="like-content">
      <block wx:for="{{ service }}">
        <view class="like-content-item">
          <view class="like-item-header">
            <image class="like-content-img" src="{{item.img}}" mode="aspectFill"></image>
          </view>
          <view class="like-item-body">
            <text class="money">{{ "￥" + item.money}}</text>
            <text class="transport">{{item.transport}}</text>
          </view>
          <view class="like-item-footer">
            <text class="text">{{item.text}}</text>
            <text class="countries">{{item.countries}}</text>
            <text class="boundaries">{{item.boundaries}}</text>
          </view>
        </view>
      </block>
    </view>
  </view>

</view>