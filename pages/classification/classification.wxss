.header-scroll {
  width: 100%;
  height: 88rpx;
  border-bottom: 2rpx solid #ccc;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  white-space: nowrap;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
}

.item {
  font-size: 28rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-top: 27rpx;
  border-right: 2rpx solid #999;
  display: inline-block;
}

.active-item{
  color: #38b2c0; 
}

.product-list, .leader-list{
  padding-top: 88rpx;
}