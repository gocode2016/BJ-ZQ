page{
  height: 100%;
}
.body{
  height: 100%;
  background-color: #f1f5f8;
}
.header {
  margin-bottom: 20rpx;
}

.header image {
  width: 100%;
  height: 380rpx;
}

.main {
  padding-left: 24rpx;
  padding-right: 24rpx;
  background-color: #fff;
}

.name {
  font-size: 34rpx;
  line-height: 88rpx;
}

.address {
  font-size: 28rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.add-img-box{
  padding-left: 24rpx;
  padding-right: 24rpx;
  border-left: 2rpx solid red;
}
.address image{
  width: 44rpx;
  height: 44rpx;
}

.scroll-view {
  height: 120rpx;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  white-space: nowrap;
}

.scroll-item {
  width: 180rpx;
  height: 120rpx;
  margin-right: 20rpx;
  display: inline-block;
}

.scroll-item image {
  width: 180rpx;
  height: 120rpx;
}


.weixin {
  font-size: 34rpx;
  background-color: #fff;
  margin-top: 24rpx;
  padding-left: 24rpx;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tel {
  font-size: 34rpx;
  background-color: #fff;  
  margin-top: 24rpx;
  padding-left: 24rpx;  
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.left {
  display: flex;
}

.left .img-box {
  width: 98rpx;
  height: 98rpx;
}

.left .img-box image {
  width: 98rpx;
  height: 98rpx;
}

.text {
  margin-left: 24rpx;
}

.center-text {
  font-size: 26rpx;
  color: #999;
}

.right {
  margin-right: 32rpx;
}
