/* 搜索框 */

.header {
  width: 100%;
  height: 88rpx;
  position: absolute;
  z-index: 1;
  display: flex;
  align-items: center;
}

.header .input-box {
  font-size: 22rpx;
  text-align: center;
  margin-left: 150rpx;
  position: relative;
}

.header .search-input {
  width: 400rpx;
  height: 48rpx;
  border-radius: 25rpx;
  background: rgba(255, 255, 255, 0.3);
}

.input-placeholder {
  color: #666;
}

.header .img-box {
  height: 44rpx;
  margin-left: 15rpx;
}

.header .search-img {
  width: 44rpx;
  height: 44rpx;
}

/* 搜索框提示  */

.search-pormpt {
  width: 100%;
  max-height: 750rpx;
  background-color: #fff;
  overflow: auto;
  position: absolute;
  left: 0;
  right: 0;
}

.prompt-list {
  font-size: 30rpx;
  line-height: 50rpx;
  border-bottom: 1px solid #eee;
}

/* ------------ */

.index-header {
  height: 320rpx;
  background-color: hotpink;
}

.index-header image {
  width: 100%;
  height: 100%;
}

.target-city {
  line-height: 90rpx;
  color: #999;
  border-bottom: 1px solid #eee;
  text-align: center;
  margin: 0 auto;
}

.target-city:active {
  background-color: #eee;
}

.target-date {
  font-size: 32rpx;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 10rpx;
  display: flex;
  justify-content: space-around;
}

.target-date text {
  font-size: 22rpx;
  color: #999;
}

.night {
  margin-top: 5rpx;
  display: flex;
  align-items: center;
}

.night-box {
  height: 46rpx;
  color: #999;
  text-align: center;
  padding: 4rpx 10rpx;
  border: 1px solid #ccc;
  border-radius: 100rpx;
}

/* 搜索 按钮  */

.btn {
  width: 30%;
  height: 80rpx;
  margin: 40rpx auto;
}

.btn button {
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  line-height: 80rpx;
}

/* 酒店列表 */

.hotel-list {
  font-size: 32rpx;
  width: 80%;
  text-align: center;
  padding: 20rpx 80rpx;
  margin: 0 auto;
  border-bottom: 1px solid #ccc;
}
.hotel-prompt{
  text-align: center;
  padding: 20rpx;
  background-color: #f2f2f2;
}
