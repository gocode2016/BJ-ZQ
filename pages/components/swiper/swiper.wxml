<!--pages/components/swiper/swiper.wxml-->

<!-- 头部图片部分  -->
<view bindtap='click' class="swiper">
  <swiper class="slide" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="circular">
    <!-- <block wx:for="{{res['产品详情'].product_modular['产品图片']}}"> -->
    <block wx:for="{{imgUrls}}"> 
      <swiper-item>
      <!-- <wxs module="enCode">
        function enCode(url){
          return encodeURI(url)
        }
        module.exports.enCode = enCode
      </wxs> -->
        <!-- <image src="{{enCode.enCode('http://bytserp.com/zs-back/'+ item.path)}}" class="slide-image" mode="aspectFill" bindtap='c_main_item_tap'/> -->
        <image src="{{item}}" class="slide-image" mode="aspectFill" bindtap='c_main_item_tap'/>
      </swiper-item>
    </block>
  </swiper>
  <!-- 中间主题内容 费用和出发地 -->
   <view class="body">
      <!-- <text class="money">{{ "￥" + res.money}}</text> -->
      <text class="money">￥13800</text>
      <text class="transport">签送地：{{res['产品详情'].dep_city_name}}</text>
    </view>
    <!-- 底下的简介和小标签  -->
    <view class="footer">
      <text class="text">{{res['产品详情'].pd_name}}</text>
      <!-- 绑定链接的小标签  注意 navigator还没添加跳转方式-->
      <view catchtap="no-bubbling" class="activity" wx:if="{{res['产品详情'].pd_nav_name}}">{{res['产品详情'].pd_nav_name}}</view>
      <view catchtap="no-bubbling" class="activity countries" wx:if="{{res['产品详情'].pd_tag_name}}">{{res['产品详情'].pd_tag_name}}</view>
      <view catchtap="no-bubbling" class="activity" wx:if="{{res['产品详情'].pd_subtag_name}}">{{res['产品详情'].pd_subtag_name}}</view>
      <view catchtap="no-bubbling" class="activity promote" wx:if="{{response.activity.promote}}">{{response.activity.promote}}</view>
    </view>

</view> 