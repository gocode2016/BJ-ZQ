<!--pages/list/list.wxml-->
<view class="list" wx:for="{{data}}" wx:key="{{index}}" >
  <view class="left">
    <image class="img" src="{{item.img}}" mode="scaleToFill"></image>
  </view>
  <view class="right">
    <view class="right-header">{{item.Introduction}}</view>
    <view class="right-body">
      <text class="money">{{ "￥" + item.money}}</text>
      <text class="transport">{{item.transport}}</text>
    </view>
    <view class="footer">
      <!-- 绑定链接的小标签  注意 navigator还没添加跳转方式-->
      <view class="activity" wx:if="{{item.activity.promotion}}">{{item.activity.promotion}}</view>
      <view class="activity countries" wx:if="{{item.activity.countries}}">{{item.activity.countries}}</view>
      <view class="activity" wx:if="{{item.activity.boundaries}}">{{item.activity.boundaries}}</view>
      <view class="activity promote" wx:if="{{item.activity.promote}}">{{item.activity.promote}}</view>
    </view>
  </view>
</view>