/* pages/orderDetails/olderDetails.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #f1f5f8;
}
.body{
  width: 100%;
  height: 100%;
}
.header {
  font-size: 28rpx;
  line-height: 42rpx;
  background-color: #fff;  
  padding: 20rpx 24rpx;
}

/* 订单信息 */

.order-info, .contact-info, .we {
  font-size: 24rpx;
  line-height: 48rpx;
  color: #999;
  background-color: #fff;
  margin-top: 16rpx;
}

.order-info-title, .contact-info-title, .we-title{
  font-size: 28rpx;
  line-height: 72rpx;
  color: #000;
  border-bottom: 2rpx solid #ccc;
  padding-left: 24rpx;
}
.order-info-main, .contact-info-main, .we-main{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.order-info-main view, .contact-info-main view, .we-main view{
  padding-left: 24rpx;
}

/* 备注信息 */
.comment-main{
  text-indent: 2em;
  padding-right: 48rpx;
}